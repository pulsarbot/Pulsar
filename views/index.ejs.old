<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Pulsar - Home</title>
		<%- include('templates/head.ejs') %>
	</head>
	<body>
		<%- include('templates/header.ejs') %>
			<div class="span12">
				<% 
					var loginAlert = '';
					if(req.query.notLoggedIn === ''){
						loginAlert += '<div class="alert alert-error">\uD83D\uDD12 <strong>Not logged in.</strong> You must be logged in to do that.</div>';
					} 
					else if(req.query.justLoggedOut === ''){
						loginAlert += '<div class="alert alert-success">\u2705 <strong>Logged out.</strong> You are now logged out. Have a secure day.</div>';
					}
				%>
				<%- loginAlert %>
				<script>document.getElementById('homeNavItem').setAttribute('class', 'active');</script>

				<h1>Pulsar</h1>
				<p>Welcome to Pulsar</p>
			</div>
		<%- include('templates/footer.ejs') %>
	</body>
</html>
